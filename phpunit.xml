<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="./tests/bootstrap.php" backupGlobals="true" colors="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage>
    <include>
      <directory suffix=".php">src</directory>
    </include>
    <exclude>
      <directory suffix="Interface.php">src/</directory>
      <directory suffix="helpers.php">src/</directory>
    </exclude>
  </coverage>
  <testsuites>
    <testsuite name="PHP Collection Library Tests">
      <directory>tests</directory>
    </testsuite>
  </testsuites>
</phpunit>
